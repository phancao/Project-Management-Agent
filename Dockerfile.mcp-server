FROM ghcr.io/astral-sh/uv:python3.12-bookworm

ENV PYTHONUNBUFFERED=1

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Install system dependencies including libpq for PostgreSQL
RUN apt-get update && apt-get install -y \
    libpq-dev \
    curl \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Pre-cache the application dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --locked --no-install-project

# Copy the application into the container
COPY . /app

# Install the application dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked

# Create logs and data directories
RUN mkdir -p /app/logs /app/data

# Expose port for SSE/HTTP transports (default: 8081, configurable via MCP_PORT)

# Health check (uses default port 8081, expects docker-compose to override via CMD if different)
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:${MCP_PORT:-8081}/health || exit 1

# Run the MCP server - port comes from MCP_PORT env var (set by docker-compose)
# For stdio transport, use: uv run python scripts/run_pm_mcp_server.py --transport stdio
CMD ["sh", "-c", "uv run python scripts/run_pm_mcp_server.py --transport sse --host 0.0.0.0 --port ${MCP_PORT:-8081}"]

